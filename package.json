{
  "name": "kubernetes-enhanced-informer",
  "version": "0.1.18",
  "description": "Informer for kubernete based axios",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "repository": "https://github.com/joshughes/kubernetes-axios-informer",
  "node": ">=20.12.2",
  "files": [
    "dist/*.ts",
    "dist/*.js",
    "README.md"
  ],
  "scripts": {
    "format": "prettier --loglevel error --write \"./src/**/*.ts\"",
    "lint": "eslint \"src/**/*.ts\" --fix",
    "test": "jest",
    "build": "tsc"
  },
  "author": "Joseph Hughes",
  "license": "MIT",
  "peerDependencies": {
    "@kubernetes/client-node": "^0.20.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?": "ts-jest"
    },
    "testRegex": "(/__tests/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "rootDir": "src",
    "testEnvironment": "node",
    "verbose": false,
    "moduleDirectories": [
      "node_modules",
      "src"
    ],
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ]
  },
  "devDependencies": {
    "@kubernetes/client-node": "^0.20.0",
    "@types/byline": "4.2.33",
    "@types/jest": "26.0.20",
    "@types/node": "20.12.7",
    "@types/request": "2.48.5",
    "@typescript-eslint/eslint-plugin": "5.17.0",
    "@typescript-eslint/parser": "5.17.0",
    "eslint": "8.12.0",
    "eslint-config-async": "1.0.1",
    "eslint-config-google": "^0.14.0",
    "eslint-config-prettier": "6.15.0",
    "eslint-plugin-import": "2.25.4",
    "eslint-plugin-node": "11.1.0",
    "eslint-plugin-prettier": "4.0.0",
    "eslint-plugin-promise": "6.0.0",
    "husky": "5.1.3",
    "jest": "29.1.2",
    "lint-staged": "^10.5.2",
    "prettier": "^2.2.1",
    "ts-jest": "^29.1.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.4.5"
  },
  "dependencies": {
    "byline": "^5.0.0",
    "ci": "^2.3.0"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "prettier --write",
      "eslint --fix"
    ]
  }
}
